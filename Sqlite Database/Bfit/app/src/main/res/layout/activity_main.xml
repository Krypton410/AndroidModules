<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edison.bfit.MainActivity"
    android:background="#171616">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="371dp"
        android:layout_height="179dp"
        android:layout_x="20dp"
        android:layout_y="88dp"
        app:srcCompat="@drawable/name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="334dp"
        android:layout_height="85dp"
        android:layout_x="-58dp"
        android:layout_y="234dp"
        app:srcCompat="@drawable/ageinput" />

    <EditText
        android:id="@+id/theName"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:layout_x="46dp"
        android:layout_y="170dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/theAge"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_x="19dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_y="268dp"
        android:ems="10"
        android:inputType="number" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="277dp"
        android:layout_height="81dp"
        android:layout_x="160dp"
        android:layout_y="238dp"
        app:srcCompat="@drawable/heightinput" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="357dp"
        android:layout_height="81dp"
        android:layout_x="-73dp"
        android:layout_y="333dp"
        app:srcCompat="@drawable/weightinput" />

    <EditText
        android:id="@+id/theWeight"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_y="372dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <NumberPicker
        android:id="@+id/theInches"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_x="343dp"
        android:layout_y="270dp" />

    <NumberPicker
        android:id="@+id/theFeet"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_x="238dp"
        android:layout_y="270dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="182dp"
        android:layout_height="81dp"
        android:layout_x="17dp"
        android:layout_y="434dp"
        app:srcCompat="@drawable/genderinputfff" />

    <Spinner
        android:id="@+id/genderPicker"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_x="21dp"
        android:layout_y="469dp"
        android:entries="@array/genders" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="193dp"
        android:layout_height="80dp"
        android:layout_x="205dp"
        android:layout_y="333dp"
        app:srcCompat="@drawable/unitinput" />

    <Spinner
        android:id="@+id/unitSpinner"
        android:entries="@array/units"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:layout_x="215dp"
        android:layout_y="367dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_x="245dp"
        android:layout_y="610dp"
        android:background="@drawable/continuebutton"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/bck"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_x="24dp"
        android:layout_y="24dp"
        android:background="@drawable/back" />

    <Button
        android:id="@+id/updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="222dp"
        android:layout_y="439dp"
        android:text="update" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="224dp"
        android:layout_y="496dp"
        android:text="View" />

    <EditText
        android:id="@+id/editTextID"
        android:layout_width="271dp"
        android:layout_height="51dp"
        android:layout_x="113dp"
        android:layout_y="21dp"
        android:inputType="number"
        android:ems="10"
         />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_x="317dp"
        android:layout_y="436dp"
        android:text="Delete" />

</AbsoluteLayout>
